#include <iostream>
#include <cmath>
using namespace std;

int main ()
{
	int n = 0;
	int sum = 0;
	int r;
	
	cout <<"Enter the number " << endl;
	cin >> n;
	
	for (;;)
	{
		if (n>0)
		{
			sum = 0;
		for (r = 1; r<=n; r++ )
		{
		sum = sum + r;
		}
		cout << "The SUM of all the whole numbers between 1 and " << n << " is = " << sum << endl;
		cout << "Enter the number " << endl;
		cin >> n;
		}
		else
		{
			cout << "Thank You!";
			break;
		}
	}
	return 0;
}
